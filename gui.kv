BoxLayout:
    id: mainBox

    Popup:
        id: popup
        size_hint: (.7, .7)
        title: "New Item"
        on_parent:
            if self.parent == mainBox: self.parent.remove_widget(self)
        BoxLayout:
            id: inputs
            orientation: 'vertical'
            Label:
                id: new_item_name_display
                text: 'New Item Name: '
                size_hint_y: None
                height: '48dp'
            TextInput:
                id: new_item_name
                value: ''
                size_hint_y: None
                height: '48dp'
                multiline: False
                write_tab: False
            Label:
                id: new_item_description_display
                text: 'New Item Description: '
                size_hint_y: None
                height: '48dp'
            TextInput:
                id: new_item_description
                value: ''
                size_hint_y: None
                height: '48dp'
                multiline: False
                write_tab: False
            Label:
                id: new_item_price_display
                text: 'Price Per Day: '
                size_hint_y: None
                height: '48dp'
            TextInput:
                id: new_item_price
                value: ''
                size_hint_y: None
                height: '48dp'
                multiline: False
                write_tab: False
            Button:
                text: 'Save Entry'
                on_release: app.press_save_new_item(new_item_name.text, new_item_description.text, new_item_price.text)
            Button:
                text: 'Cancel'
                on_release: app.press_cancel()

    BoxLayout:
        id: Box1
        orientation: "vertical"

        BoxLayout:
            orientation: "horizontal"

            BoxLayout:
                id: Box3
                orientation: "vertical"
                size_hint: 0.2, 1
                Button:
                    id: list_items
                    text: "List of all items"
                    font_size: 16
                    on_release: app.press_list()

                Button:
                    id: hire_item_button
                    text: "Hire Items"
                    font_size: 16
                    on_release: app.press_hire()

                Button:
                    id: return_item_button
                    text: "Return Items"
                    font_size: 16
                    on_release: app.press_reutrn()

                Button:
                    id: confirm_button
                    text: "Confirm"
                    font_size: 16
                    on_release: app.press_confirm()

                Button:
                    id:add_new_item_button
                    text: "Add new Item"
                    font_size: 16
                    on_release: app.press_add()

            GridLayout:
                id: items_grid
                cols: 1
                orientation: "vertical"

        BoxLayout:
            id: Box2
            size_hint_x: 1
            size_hint_y: 0.15
            Label:
                id: status_text
