BoxLayout:
    id: mainBox
    orientation: "horizontal"

    Popup:
        id: popup
        size_hint: (.7, .7)
        title: "New Item"
        on_parent:
            if self.parent == mainBox: self.parent.remove_widget(self)
        BoxLayout:
            id: inputs
            orientation: 'vertical'
            Label:
                text: 'New Item Name: '
                size_hint_y: None
                height: '48dp'
            TextInput:
                id: new_item_name
                value: ''
                size_hint_y: None
                height: '48dp'
                multiline: False
                write_tab: False
            Label:
                text: 'New Item Description: '
                size_hint_y: None
                height: '48dp'
            TextInput:
                id: new_item_description
                value: ''
                size_hint_y: None
                height: '48dp'
                multiline: False
                write_tab: False
            Label:
                text: 'Price Per Day: '
                size_hint_y: None
                height: '48dp'
            TextInput:
                id: new_item_price
                value: ''
                size_hint_y: None
                height: '48dp'
                multiline: False
                write_tab: False
            Button:
                text: 'Save Entry'
                on_release: app.press_save_new_item(new_item_name.text, new_item_description.text, new_item_price.text)
            Button:
                text: 'Cancel'
                on_release: app.press_cancel()

    BoxLayout:
        orientation: "horizontal"
        BoxLayout:
            orientation: "vertical"
            Button:
                id: list_items
                text: "List of all items"
                font_size: 16
#            padding_horizontal:
#            padding_vertical:

        #BoxLayout:
            #orientation: "vertical"
            Button:
                text: "Hire Items"
                font_size: 16

        #BoxLayout:
            #orientation: "vertical"
            Button:
                text: "Return Items"
                font_size: 16

        #BoxLayout:
            #orientation: "vertical"
            Button:
                text: "Confirm"
                font_size: 16

        #BoxLayout:
            #orientation: "vertical"
            Button:
                id:add_new_item_button
                text: "Add new Item"
                font_size: 16
                on_release: app.press_add()
